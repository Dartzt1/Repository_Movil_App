<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movil_App.View.DetallePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Detalles Del Contacto" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Nombre completo:"></Label>
            <Label Text="{Binding Nombre}" ></Label>
            <Label Text="Apellido completo:"></Label>
            <Label Text="{Binding Apellido}"></Label>
            <Label Text="Numero completo:"></Label>
            <Label Text="{Binding Numero}"></Label>
            <Label Text="Edad:"></Label>
            <Label Text="{Binding Edad}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>