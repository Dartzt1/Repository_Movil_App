<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movil_App.View.DetallePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#1ABC9C" Padding="10" CornerRadius="0">
                <Label Text="Detalles Del Contacto" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Image Source="inicio.png" HeightRequest="100" WidthRequest="100"/>

            <StackLayout Padding="10" Margin="5">
                
                <Label Text="Nombre completo:" 
                       FontSize="15">
                </Label>
                <Label Text="{Binding Nombre}"
                        HorizontalOptions="End">
                </Label>
                
                <Label Text="Apellido completo: "
                       FontSize="15"></Label>
                <Label Text="{Binding Apellido}"
                        HorizontalOptions="End">
                </Label>
                <Label Text="Numero completo:" 
                       FontSize="15"></Label>
                <Label Text="{Binding Numero}" 
                       HorizontalOptions="End">
                </Label>
                <Label Text="Edad:" 
                       FontSize="15">
                </Label>
                <Label Text="{Binding Edad}" 
                       HorizontalOptions="End">
                </Label>
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>